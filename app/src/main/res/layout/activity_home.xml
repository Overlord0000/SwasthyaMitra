<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_back"
    >

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_gravity="center"
        android:background="@drawable/glass_morph_home">


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/HealthProfilebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/health_profile_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Health Profile"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Profile"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/MedicicineManagebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/medication_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Medication Management"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medication Management"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/Appointmentsbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/doctor_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Doctors and Appointments"
                tools:ignore="HardcodedText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctors and Appointments"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/EmergencyToolsbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/emergency_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Emergency Tools"
                tools:ignore="HardcodedText,ImageContrastCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Tools"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/Wellnessbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wellness_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Wellness"
                tools:ignore="HardcodedText,ImageContrastCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wellness"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/Trackingbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tracking_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Tracking"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tracking"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>

    </GridLayout>

</RelativeLayout>
